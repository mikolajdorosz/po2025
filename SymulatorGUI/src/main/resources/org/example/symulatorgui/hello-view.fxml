                                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #34495e; -fx-min-width: 110;" text="Waga" />
                                                        <TextField fx:id="carWeightTextField" promptText="Podaj wagę [kg]" style="-fx-background-color: #f8f9fa; -fx-text-fill: #2c3e50; -fx-background-radius: 6; -fx-border-color: #d1d8e0; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 8;" />
                                                    </children>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                    <children>
                                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #34495e; -fx-min-width: 110;" text="Prędkość" />
                                                        <TextField fx:id="carSpeedTextField" promptText="Podaj prędkość [km/h]" style="-fx-background-color: #f8f9fa; -fx-text-fill: #2c3e50; -fx-background-radius: 6; -fx-border-color: #d1d8e0; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 8;" />
                                                    </children>
                                                </HBox>
                                                <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10 0 0 0;">
                                                    <children>
                                                        <Button fx:id="startCarButton" onAction="#onStartCar" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 10 20; -fx-cursor: hand;" text="Włącz" />
                                                        <Button fx:id="turnOffCarButton" onAction="#onTurnOffCar" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 10 20; -fx-cursor: hand;" text="Wyłącz" />
