    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 15 20; -fx-background-color: #ffffff; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.06), 12, 0, 0, 2);">
            <BorderPane.margin>
                <Insets bottom="10.0" />
            </BorderPane.margin>
            <children>
                <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Samochód" />
                <ComboBox fx:id="carComboBox" prefWidth="180.0" promptText="Wybierz model" style="-fx-background-color: #f8f9fa; -fx-text-fill: #2c3e50; -fx-background-radius: 6; -fx-border-color: #d1d8e0; -fx-border-width: 1; -fx-border-radius: 6;" />
