<BorderPane prefHeight="642.0" prefWidth="757.0" style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #e8ecf1); -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.symulatorgui.AppController">

    <left>
