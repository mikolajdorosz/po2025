                                                        <TextField fx:id="engineWeightTextfield" promptText="Podaj wagę [kg]" style="-fx-background-color: #f8f9fa; -fx-text-fill: #2c3e50; -fx-background-radius: 6; -fx-border-color: #d1d8e0; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 8;" />
                                                    </children>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                    <children>
                                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #34495e; -fx-min-width: 110;" text="Obroty" />
                                                        <TextField fx:id="engineSpeedTextfield" promptText="Podaj obroty" style="-fx-background-color: #f8f9fa; -fx-text-fill: #2c3e50; -fx-background-radius: 6; -fx-border-color: #d1d8e0; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 8;" />
