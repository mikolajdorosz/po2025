<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TitledPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.simulatorgui.controller.CarController" animated="false"
            style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #e0e6ed; -fx-border-width: 1; -fx-border-radius: 8;" text="Car">
    <AnchorPane style="-fx-background-color: #ffffff; -fx-background-radius: 8;">
        <VBox spacing="12" style="-fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Model" style="-fx-font-weight: bold; -fx-text-fill: #34495e; -fx-min-width: 110;"/>
                <TextField fx:id="carModelTextField" promptText="Enter model" text="Model"
                           style="-fx-background-color: #f8f9fa; -fx-background-radius: 6; -fx-border-color: #d1d8e0; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 8;"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="License plate" style="-fx-font-weight: bold; -fx-text-fill: #34495e; -fx-min-width: 110;"/>
                <TextField fx:id="carPlateNumberTextField" promptText="Enter id number" text="License plate"
                           style="-fx-background-color: #f8f9fa; -fx-background-radius: 6; -fx-border-color: #d1d8e0; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 8;"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Weight" style="-fx-font-weight: bold; -fx-text-fill: #34495e; -fx-min-width: 110;"/>
                <TextField fx:id="carWeightTextField" promptText="Enter weight [kg]" text="1250"
                           style="-fx-background-color: #f8f9fa; -fx-background-radius: 6; -fx-border-color: #d1d8e0; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 8;"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Speed" style="-fx-font-weight: bold; -fx-text-fill: #34495e; -fx-min-width: 110;"/>
                <TextField fx:id="carVMAXTextField" promptText="Enter speed [km/h]" text="330"
                           style="-fx-background-color: #f8f9fa; -fx-background-radius: 6; -fx-border-color: #d1d8e0; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 8;"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10 0 0 0;">
                <Button fx:id="startCarButton" onAction="#onStartCar" text="Start"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 10 20; -fx-cursor: hand;"/>
                <Button fx:id="turnOffCarButton" onAction="#onTurnOffCar" text="Turn off"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 10 20; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </AnchorPane>
</TitledPane>
