<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="642.0" prefWidth="757.0" style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #e8ecf1); -fx-padding: 20;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.simulatorgui.controller.MainController">

    <left>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #ffffff; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 15, 0, 0, 3);">
            <Accordion style="-fx-background-color: transparent;">
                <panes>
                    <fx:include fx:id="carPane" source="form/car_form.fxml"/>
                    <fx:include fx:id="gearboxPane" source="form/gearbox_form.fxml"/>
                    <fx:include fx:id="enginePane" source="form/engine_form.fxml"/>
                    <fx:include fx:id="clutchPane" source="form/clutch_form.fxml"/>
                </panes>
            </Accordion>
        </VBox>
    </left>

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 15 20; -fx-background-color: #ffffff; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.06), 12, 0, 0, 2);">
            <BorderPane.margin>
                <Insets bottom="10.0" />
            </BorderPane.margin>
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="CarSimulator" />
            <ComboBox fx:id="carComboBox" prefWidth="180.0" promptText="Select vehicle" style="-fx-background-color: #f8f9fa; -fx-text-fill: #2c3e50; -fx-background-radius: 6; -fx-border-color: #d1d8e0; -fx-border-width: 1; -fx-border-radius: 6;" />
            <Button fx:id="addCarButton" onAction="#onAddCar" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 10 20; -fx-cursor: hand;" text="Add new" />
            <Button fx:id="deleteCarButton" onAction="#onDeleteCar" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 10 20; -fx-cursor: hand;" text="Remove" />
        </HBox>
    </top>

    <center>
        <ImageView fx:id="carImageView" fitHeight="150.0" fitWidth="300.0" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 20, 0, 0, 5); -fx-padding: 10;">
            <Image url="@../images/car.png" />
        </ImageView>
    </center>

</BorderPane>
