<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.simulatorgui.controller.MenuController"
            style="-fx-background-color: linear-gradient(to bottom, #f7f8fa, #eef1f5);">

    <padding>
        <Insets top="32" right="32" bottom="32" left="32"/>
    </padding>

    <center>
        <VBox spacing="32" alignment="TOP_CENTER">
            <Label text="Car Race Manager"
                   style="-fx-font-size: 22px;
                          -fx-font-weight: 700;
                          -fx-text-fill: #2c3e50;"/>
            <VBox spacing="14" alignment="CENTER_LEFT"
                  style="-fx-background-color: #ffffff;
                         -fx-padding: 24;
                         -fx-background-radius: 16;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.06), 14, 0, 0, 6);">
                <Label text="Available cars"
                       style="-fx-font-size: 14px;
                              -fx-font-weight: 600;
                              -fx-text-fill: #7f8c8d;"/>
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <ComboBox fx:id="storedCarsComboBox"
                              promptText="Select a car"
                              prefWidth="240"
                              style="-fx-background-radius: 8;
                                     -fx-border-radius: 8;
                                     -fx-border-color: #dcdfe6;
                                     -fx-background-color: #ffffff;"/>
                    <Button text="Add to race"
                            onAction="#onAddToRace"
                            style="-fx-background-color: #2563eb;
                                   -fx-text-fill: white;
                                   -fx-font-weight: 600;
                                   -fx-background-radius: 8;
                                   -fx-padding: 8 18;
                                   -fx-cursor: hand;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="New car"
                            onAction="#onNewCar"
                            style="-fx-background-color: transparent;
                                   -fx-border-color: #2563eb;
                                   -fx-border-radius: 8;
                                   -fx-text-fill: #2563eb;
                                   -fx-font-weight: 600;
                                   -fx-padding: 8 18;
                                   -fx-cursor: hand;"/>
                    <Button text="Delete"
                            onAction="#onDeleteCar"
                            style="-fx-background-color: transparent;
                                   -fx-text-fill: #e74c3c;
                                   -fx-font-weight: 600;
                                   -fx-padding: 8 14;
                                   -fx-cursor: hand;"/>
                </HBox>
            </VBox>
            <VBox fx:id="raceCarsContainer" spacing="10" alignment="CENTER_LEFT"
                  style="-fx-background-color: #ffffff;
                         -fx-padding: 24;
                         -fx-background-radius: 16;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.06), 14, 0, 0, 6);">
                <Label text="Race lineup"
                       style="-fx-font-size: 14px;
                              -fx-font-weight: 600;
                              -fx-text-fill: #7f8c8d;"/>
                <Label text="Minimum 2 cars required to start the race"
                       style="-fx-font-size: 12px;
                              -fx-text-fill: #9ca3af;"/>
                <ListView fx:id="raceCarsListView"
                          prefHeight="180"
                          style="-fx-background-radius: 10;
                                 -fx-border-radius: 10;
                                 -fx-border-color: #dcdfe6;
                                 -fx-background-color: #fafafa;"/>
                <HBox spacing="12">
                    <Button text="Set player's car"
                            onAction="#onSetPlayerCar"
                            style="-fx-background-color: #2563eb;
               -fx-text-fill: white;
               -fx-font-weight: 600;
               -fx-background-radius: 8;
               -fx-padding: 8 18;
               -fx-cursor: hand;"/>
                    <Button text="Remove selected"
                            onAction="#onRemoveFromRace"
                            style="-fx-background-color: transparent;
                                   -fx-text-fill: #e67e22;
                                   -fx-font-weight: 600;
                                   -fx-padding: 8 14;
                                   -fx-cursor: hand;"/>
                    <Button text="Clear list"
                            onAction="#onClearList"
                            style="-fx-background-color: transparent;
                                   -fx-text-fill: #95a5a6;
                                   -fx-font-weight: 600;
                                   -fx-padding: 8 14;
                                   -fx-cursor: hand;"/>
                </HBox>
            </VBox>
            <Separator fx:id="raceSeparator" opacity="0.15" prefWidth="320"/>
            <Button fx:id="startRaceButton"
                    text="Start race"
                    onAction="#onStartRace"
                    prefWidth="220"
                    style="-fx-background-color: linear-gradient(to right, #22c55e, #16a34a);
                           -fx-text-fill: white;
                           -fx-font-weight: 700;
                           -fx-font-size: 15px;
                           -fx-background-radius: 12;
                           -fx-padding: 14 24;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(three-pass-box, rgba(34,197,94,0.4), 16, 0, 0, 6);"/>
        </VBox>
    </center>
</BorderPane>
