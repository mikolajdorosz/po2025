<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.simulatorgui.controller.form.GearboxController"
            style="
                -fx-background-color: #ffffff;
                -fx-background-radius: 12;
                -fx-border-radius: 12;
                -fx-border-color: #e5e9f0;
                -fx-border-width: 1;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 14, 0.2, 0, 4);
            ">
    <VBox spacing="16"
          AnchorPane.topAnchor="0"
          AnchorPane.rightAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          style="-fx-padding: 24;">
        <Label text="Gearbox details"
               style="
                   -fx-font-size: 20px;
                   -fx-font-weight: bold;
                   -fx-text-fill: #1f2937;
               "/>
        <Separator/>
        <HBox spacing="12" alignment="CENTER_LEFT">
            <Label text="Name"
                   style="-fx-font-weight: 600; -fx-text-fill: #334155; -fx-min-width: 120;"/>
            <TextField fx:id="gearboxNameTextField"
                       promptText="Enter name"
                       text="Gearbox"
                       HBox.hgrow="ALWAYS"
                       style="
                           -fx-background-radius: 10;
                           -fx-border-radius: 10;
                           -fx-border-color: #cbd5e1;
                           -fx-padding: 12;
                           -fx-focus-color: #3b82f6;
                           -fx-faint-focus-color: rgba(59,130,246,0.15);
                       "/>
        </HBox>
        <HBox spacing="12" alignment="CENTER_LEFT">
            <Label text="Price"
                   style="-fx-font-weight: 600; -fx-text-fill: #334155; -fx-min-width: 120;"/>
            <TextField fx:id="gearboxPriceTextField"
                       promptText="Enter price [PLN]"
                       text="50000"
                       HBox.hgrow="ALWAYS"
                       style="
                           -fx-background-radius: 10;
                           -fx-border-radius: 10;
                           -fx-border-color: #cbd5e1;
                           -fx-padding: 12;
                           -fx-focus-color: #3b82f6;
                           -fx-faint-focus-color: rgba(59,130,246,0.15);
                       "/>
        </HBox>
        <HBox spacing="12" alignment="CENTER_LEFT">
            <Label text="Weight"
                   style="-fx-font-weight: 600; -fx-text-fill: #334155; -fx-min-width: 120;"/>
            <TextField fx:id="gearboxWeightTextField"
                       promptText="Enter weight [kg]"
                       text="150"
                       HBox.hgrow="ALWAYS"
                       style="
                           -fx-background-radius: 10;
                           -fx-border-radius: 10;
                           -fx-border-color: #cbd5e1;
                           -fx-padding: 12;
                           -fx-focus-color: #3b82f6;
                           -fx-faint-focus-color: rgba(59,130,246,0.15);
                       "/>
        </HBox>
        <HBox spacing="12" alignment="CENTER_LEFT">
            <Label text="Gears number"
                   style="-fx-font-weight: 600; -fx-text-fill: #334155; -fx-min-width: 120;"/>
            <TextField fx:id="gearsTextField"
                       promptText="Enter number"
                       text="7"
                       HBox.hgrow="ALWAYS"
                       style="
                           -fx-background-radius: 10;
                           -fx-border-radius: 10;
                           -fx-border-color: #cbd5e1;
                           -fx-padding: 12;
                           -fx-focus-color: #3b82f6;
                           -fx-faint-focus-color: rgba(59,130,246,0.15);
                       "/>
        </HBox>
        <HBox spacing="16" alignment="CENTER_LEFT">
            <Label text="Type"
                   style="
               -fx-font-weight: 600;
               -fx-text-fill: #334155;
               -fx-min-width: 120;
           "/>
            <ToggleButton fx:id="typeAutoToggleButton"
                          text="Automatic"
                          toggleGroup="$gearboxTypeToggleGroup"
                          selected="true"
                          style="
                      -fx-background-color: #ffffff;
                      -fx-border-color: #3b82f6;
                      -fx-border-width: 2;
                      -fx-border-radius: 12;
                      -fx-background-radius: 12;
                      -fx-padding: 14 20;
                      -fx-font-size: 14px;
                      -fx-font-weight: 600;
                      -fx-text-fill: #1f2937;
                      -fx-cursor: hand;
                  ">
                <userData>automatic</userData>
            </ToggleButton>
            <ToggleButton fx:id="typeManualToggleButton"
                          text="Manual"
                          toggleGroup="$gearboxTypeToggleGroup"
                          style="
                      -fx-background-color: #ffffff;
                      -fx-border-color: #cbd5e1;
                      -fx-border-width: 1;
                      -fx-border-radius: 12;
                      -fx-background-radius: 12;
                      -fx-padding: 14 20;
                      -fx-font-size: 14px;
                      -fx-font-weight: 600;
                      -fx-text-fill: #1f2937;
                      -fx-cursor: hand;
                  ">
                <userData>manual</userData>
            </ToggleButton>
        </HBox>
        <HBox fx:id="clutchComboBoxContainer" spacing="12" alignment="CENTER_LEFT" visible="false">
            <Label text="Clutch" style="-fx-font-weight: 600; -fx-text-fill: #334155; -fx-min-width: 120;"/>
            <ComboBox fx:id="clutchComboBox" promptText="Select"
                      style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #cbd5e1; -fx-padding: 10;"/>
            <Button text="New clutch" fx:id="addClutchButton" onAction="#onCreateClutch"
                    style="-fx-background-radius: 10; -fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: 600; -fx-padding: 10 18; -fx-cursor: hand;"/>
            <Button text="Delete"
                    fx:id="deleteClutchButton"
                    onAction="#onDeleteClutch"
                    style="-fx-background-color: transparent;
                            -fx-text-fill: #e74c3c;
                            -fx-font-weight: 600;
                            -fx-padding: 10 18;
                            -fx-cursor: hand;"
            />
        </HBox>
        <Separator/>
        <HBox spacing="12" alignment="CENTER_RIGHT" style="-fx-padding: 12 0 0 0;">
            <Button text="Cancel"
                    onAction="#onCancel"
                    style="
                        -fx-background-color: #f3f4f6;
                        -fx-text-fill: #1f2937;
                        -fx-background-radius: 10;
                        -fx-padding: 10 20;
                        -fx-font-weight: 600;
                        -fx-cursor: hand;
                    "/>
            <Button text="Confirm"
                    onAction="#onConfirm"
                    style="
                        -fx-background-color: linear-gradient(to right, #10b981, #047857);
                        -fx-text-fill: white;
                        -fx-background-radius: 10;
                        -fx-padding: 10 22;
                        -fx-font-weight: 600;
                        -fx-cursor: hand;
                        -fx-effect: dropshadow(gaussian, rgba(16,185,129,0.3), 8, 0.1, 0, 2);
                    "/>
        </HBox>
    </VBox>
</AnchorPane>
