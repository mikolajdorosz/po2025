<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.simulatorgui.controller.form.CarController"
            style="
                -fx-background-color: #ffffff;
                -fx-background-radius: 12;
                -fx-border-radius: 12;
                -fx-border-color: #e5e9f0;
                -fx-border-width: 1;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0.2, 0, 2);
            ">
    <VBox spacing="14"
          AnchorPane.topAnchor="0"
          AnchorPane.rightAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          style="-fx-padding: 20;">
        <!-- TITLE -->
        <Label text="Car: "
               style="
                   -fx-font-size: 18px;
                   -fx-font-weight: bold;
                   -fx-text-fill: #2c3e50;
               "/>
        <Separator/>
        <!-- MODEL -->
        <HBox spacing="12" alignment="CENTER_LEFT">
            <Label text="Model"
                   style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <TextField fx:id="carModelTextField"
                       promptText="Enter model"
                       text="Model"
                       HBox.hgrow="ALWAYS"
                       style="
               -fx-background-radius: 8;
               -fx-border-radius: 8;
               -fx-border-color: #dcdfe6;
               -fx-padding: 10;
           "/>
        </HBox>
        <!-- PLATE -->
        <HBox spacing="12" alignment="CENTER_LEFT">
            <Label text="License plate"
                   style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <TextField fx:id="carPlateNumberTextField"
                       promptText="Enter plate number"
                       text="ABC1234"
                       HBox.hgrow="ALWAYS"
                       style="
                           -fx-background-radius: 8;
                           -fx-border-radius: 8;
                           -fx-border-color: #dcdfe6;
                           -fx-padding: 10;
                       "/>
        </HBox>
        <!-- WEIGHT -->
        <HBox spacing="12" alignment="CENTER_LEFT">
            <Label text="Weight"
                   style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <TextField fx:id="carWeightTextField"
                       promptText="Enter weight [kg]"
                       text="1250"
                       HBox.hgrow="ALWAYS"
                       style="
                           -fx-background-radius: 8;
                           -fx-border-radius: 8;
                           -fx-border-color: #dcdfe6;
                           -fx-padding: 10;
                       "/>
        </HBox>
        <!-- VMAX -->
        <HBox spacing="12" alignment="CENTER_LEFT">
            <Label text="VMAX"
                   style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <TextField fx:id="carVMAXTextField"
                       promptText="Enter VMax [km/h]"
                       text="330"
                       HBox.hgrow="ALWAYS"
                       style="
                           -fx-background-radius: 8;
                           -fx-border-radius: 8;
                           -fx-border-color: #dcdfe6;
                           -fx-padding: 10;
                       "/>
        </HBox>
        <!-- ENGINE -->
        <HBox spacing="10" alignment="CENTER">
            <ComboBox fx:id="engineComboBox" promptText="Select engine"/>
            <Button text="New engine" fx:id="addEngineButton" onAction="#onCreateEngine"
                    style="-fx-background-radius: 6; -fx-background-color: #2980b9; -fx-text-fill: white;"/>
        </HBox>
        <!-- GEARBOX -->
        <HBox spacing="10" alignment="CENTER">
            <ComboBox fx:id="gearboxComboBox" promptText="Select gearbox"/>
            <Button text="New gearbox" fx:id="addGearboxButton" onAction="#onCreateGearbox"
                    style="-fx-background-radius: 6; -fx-background-color: #2980b9; -fx-text-fill: white;"/>
        </HBox>
        <!-- ACTIONS -->
        <Separator/>
        <HBox spacing="12"
              alignment="CENTER_RIGHT"
              style="-fx-padding: 10 0 0 0;">
            <Button text="Cancel"
                    onAction="#onCancel"
                    style="
                -fx-background-color: #ecf0f1;
                -fx-text-fill: #2c3e50;
                -fx-background-radius: 8;
                -fx-padding: 10 18;
                -fx-font-weight: bold;
            "/>
            <Button text="Confirm"
                    onAction="#onConfirm"
                    style="
                -fx-background-color: linear-gradient(#27ae60, #1e8449);
                -fx-text-fill: white;
                -fx-background-radius: 8;
                -fx-padding: 10 22;
                -fx-font-weight: bold;
                -fx-cursor: hand;
            "/>
        </HBox>
    </VBox>
</AnchorPane>
